---
const projects = [
  {
    title: 'Medical Drone Network',
    description: 'Established Eswatini\'s first medical drone delivery network, connecting remote clinics with central medical facilities.',
    image: '/images/Drone.jpg',
    tags: ['Logistics', 'Healthcare', 'Operations'],
    badge: 'Drone Operations',
    link: '#',
  },
  {
    title: 'UNIFI Network Implementation',
    description: 'Designed and deployed enterprise-grade UNIFI network infrastructure across multiple corporate locations.',
    image: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=600&q=80',
    tags: ['Networking', 'Security', 'Scalability'],
    badge: 'IT Infrastructure',
    link: '#',
  },
  {
    title: 'Utility Company Website',
    description: 'Redesigned and developed the Eswatini Electrical Company website with improved user experience and functionality.',
    image: 'https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=600&q=80',
    tags: ['Responsive', 'UI/UX', 'CMS'],
    badge: 'Web Development',
    link: '#',
  }
  
];
---

<section id="projects" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <span class="inline-block mb-2 px-3 py-1 text-xs font-medium bg-gray-200 rounded-full text-gray-700">My Work</span>
      <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mb-2">Featured Projects</h2>
      <div class="mx-auto w-24 h-1 bg-red-500 rounded"></div>
    </div>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {projects.map(project => (
        <div class="bg-white rounded-xl shadow-md hover:shadow-xl/30 transition-shadow duration-300 flex flex-col">
          <div class="relative h-48 rounded-t-xl overflow-hidden">
            <img src={project.image} alt={project.title} class="object-cover w-full h-full" />
            <span class="absolute top-3 right-3 bg-red-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md">{project.badge}</span>
          </div>
          <div class="flex-1 flex flex-col p-5">
            <h3 class="text-lg font-bold text-gray-900 mb-1">{project.title}</h3>
            <p class="text-gray-600 text-sm mb-4 flex-1">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded font-medium">{tag}</span>
              ))}
            </div>
            <a href={project.link} class="mt-auto text-red-600 font-semibold text-sm hover:underline flex items-center gap-1">View Project <span aria-hidden="true">→</span></a>
          </div>
        </div>
      ))}
    </div>
    <div class="flex justify-center mt-12">
      <a href="#" class="px-6 py-3 bg-gray-900 text-white rounded-full font-semibold shadow hover:bg-gray-700 transition">View All Projects →</a>
    </div>
  </div>
</section>
